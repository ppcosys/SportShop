@model Product

<div class="card card-outline-primary m-l p-1 ">
    <div class="bg-faded p-l">
        <h4>
            @Model?.Name
            <span class="badge rounded-pill bg-primary text-white" style="float:right">
                <small>Cena: @Model?.Price.ToString("c")</small>
            </span>
        </h4>
    </div>
        
    <form id="@Model?.ProductID" asp-page="/Cart" method="post">
        <input type="hidden" asp-for="ProductID"/>
        <input type="hidden" name="returnUrl" value="@ViewContext.HttpContext.Request.PathAndQuery()"/>
        <span class="card-text p-l">
            @Model?.Description
            <button type="submit" class="btn btn-success btn-sm pull-right" style="float:right">
                Do koszyka
            </button>
        </span>
    </form>

</div>