@model IEnumerable<string>

<div class="d-grid gap-2">
    <a class="btn @(ViewBag.SelectedCategory == null ? "btn-primary" : "btn-outline-secondary")"
       asp-route="all">
        Wszystkie
    </a>

    @foreach(string category in Model ?? Enumerable.Empty<string>())
    {
        <a class="btn @(category == ViewBag.SelectedCategory ? "btn-primary" : "btn-outline-secondary")"
            asp-action="Index"
            asp-controller="Home"
            asp-route-category="@category">
            @category
        </a>
    }
</div>
         